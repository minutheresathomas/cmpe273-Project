<html>
        <head>
            <title>Home</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <!-- Latest compiled and minified CSS -->
           	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
			<!-- Select other themes -->
          	<!-- Optional theme -->
          	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
          	<script type="text/javascript">
		          var user_id = sessionStorage.getItem('username');
		    </script>
        </head>
        <body>
        	
        	<div>
	        	<h4>
	        	Web Voting </h4>
        	</div>
        	
            <div class="container">
                <div class="jumbotron">
                
					<!--<script id="searchPoll" type="text/template"> -->
						<div>
							<label>Question</label>
							<input id="queSubString" type="text" class="span3" placeholder="Type a Question SubString">
							<input id="search" type="image" value="Remove" src="../../../../assets/js/images/search.jpeg" width="20" height="20" />
							<span class="help-inline">eg:subject as in "What is your favorite subject?"</span>
						</div>
                    <!-- calls getPolls() from UserResource -->
                    <div>
	                    <ul>
		                    {{#poll}}
		                        <li> <a id="{{id}}" href="user/{{id}}"> {{question}} </a> </li>
		                    {{/poll}}
	                    </ul>
	                </div>
	                <div>
		                <button id="btnAdd" type="button" class="btn btn-primary" onclick="DoNav()" >Create Poll</button> 

						<button id="btnRenew" type="button" class="btn btn-primary" onclick="DoNav1()" >Renew Poll</button> 
					</div>
                </div>
            </div> <!-- end of container -->
           
            <!-- script tags -->
            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="//code.jquery.com/jquery.js"></script>
            <!-- Latest compiled and minified JavaScript -->
			<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
			<!-- application ui scripts -->
			<script type="text/javascript">
				function DoNav()
				{
				var user_id = sessionStorage.getItem('username');
				document.location.href = user_id+"/createPoll";
				}
			</script>
			<script type="text/javascript">
				function DoNav1()
				{
				var user_id = sessionStorage.getItem('username');
				document.location.href = user_id+"/renewPolls";
				}
			</script>
			
			<script src="../../../../assets/js/search.js"></script> 
		<!--	<script  src="../../../../assets/js/fb.js"></script> -->
		    <script src="../../../../assets/js/socket.js"></script>
        </body>
</html>